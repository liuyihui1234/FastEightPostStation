<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/background_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_appBar"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:background="@color/green_base">

        <TextView
            android:id="@+id/mTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="意见反馈"
            android:textColor="@color/white"
            android:textSize="20sp" />
        <ImageView
            android:id="@+id/mBackImageBtn"
            android:layout_width="25dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/arrow_left_white" />
    </RelativeLayout>
<TextView
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="文字留言"
    android:textColor="@color/black1"
    android:textSize="@dimen/dp_16"/>
    <LinearLayout
        android:id="@+id/ll_feedback"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_175"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/corner_5_white_drawable"
        android:orientation="horizontal">
            <EditText
                android:id="@+id/tv_feedback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="请输入反馈内容"
                android:padding="@dimen/dp_8"
                android:background="@null"
                android:textSize="16dp" />
        <TextView
            android:gravity="end"
            android:layout_gravity="bottom"
            android:layout_marginLeft="@dimen/dp_100"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您还能输入300个字" />
</LinearLayout>
    <TextView
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="点击添加图片"
        android:textColor="@color/black1"
        android:textSize="@dimen/dp_16"/>
    <LinearLayout
        android:id="@+id/ll_addPictures"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_125"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/corner_5_white_drawable"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_addPictures"
            android:layout_width="@dimen/dp_75"
            android:layout_height="@dimen/dp_75"
            android:layout_marginLeft="@dimen/dp_10"
            android:src="@drawable/mywallet_feedback"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_submission"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_height="@dimen/dp_40"
        android:layout_marginBottom="50dp"
        android:background="@drawable/corner_3_red_drawable"
        android:gravity="center"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="16dp" />
</LinearLayout>