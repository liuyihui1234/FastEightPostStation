<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/main_bg"
    tools:context=".ui.homepage.OrderActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@color/base_color">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="@dimen/dp_23"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:padding="12dp"
                android:onClick="onBack"
                android:src="@drawable/arrow_left_white"
                tools:ignore="OnClick" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/bg_white"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:layout_marginLeft="40dp"
                    android:src="@mipmap/search_ic"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="14dp"
                    android:paddingLeft="@dimen/dp_10"
                    android:textColor="@color/text_gray"
                    android:text="请输入手机号/单号/揽件码搜索"
                    android:background="@null"/>
            </LinearLayout>
            <ImageView
                android:layout_width="45dp"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_line"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/bg_white"
            android:orientation="horizontal"
            android:layout_marginTop="30dp">
            <LinearLayout
                android:id="@+id/ll_inhouse"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@mipmap/createorder_ic"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="14dp"
                    android:text="创建订单"
                    android:textColor="@color/textcolor" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_outhouse"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@mipmap/scanning_order_ic"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="14dp"
                    android:text="扫描下单"
                    android:textColor="@color/textcolor" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_savehouse"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@mipmap/bulkorder_ic"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="批量下单"
                    android:textSize="14dp"
                    android:textColor="@color/textcolor" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_onhouse"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@mipmap/inviteorder_ic"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="邀请下单"
                    android:textSize="14dp"
                    android:textColor="@color/textcolor" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:padding="@dimen/dp_10"
        android:background="@drawable/bg_white">
        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black"
            android:textSize="@dimen/dp_14"
            android:textStyle="bold"
            android:text="0.00"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_gray"
            android:layout_below="@id/tv_money"
            android:layout_marginTop="@dimen/dp_5"
            android:textSize="@dimen/dp_14"
            android:text="今日收款"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_gray"
            android:layout_toRightOf="@id/tv_money"
            android:textSize="@dimen/dp_14"
            android:text="元"/>

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black"
            android:textSize="@dimen/dp_14"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:text="0"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_gray"
            android:layout_toRightOf="@id/tv_num"
            android:textSize="@dimen/dp_14"
            android:text="单"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_gray"
            android:layout_below="@id/tv_num"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/dp_14"
            android:text="今日总订单"/>

        <TextView
            android:id="@+id/tv_dan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_gray"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/dp_14"
            android:text="单"/>
        <TextView
            android:id="@+id/tv_printing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black"
            android:textSize="@dimen/dp_14"
            android:textStyle="bold"
            android:layout_toLeftOf="@id/tv_dan"
            android:text="0"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_gray"
            android:layout_below="@id/tv_printing"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/dp_14"
            android:text="今日未打印"/>
    </RelativeLayout>

    <GridView
        android:id="@+id/gridview1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:horizontalSpacing="@dimen/dp_1"
        android:verticalSpacing="@dimen/dp_1"
        android:gravity="center_horizontal"
        android:numColumns="3"/>
</LinearLayout>